<!DOCTYPE html>
<html lang="en">
  <%- include ("components/head") %>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-K5F7TFV"
        height="0"
        width="0"
        style="display: none; visibility: hidden"
      ></iframe
    ></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <!-- Navigation-->
    <%- include ("components/navbar") %>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('<%=article.img%>')">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="post-heading">
              <h1><%= article.title %></h1>
              <span class="meta">
                Posted by
                <a href="#!"><%= article.autor_id %> </a>
                on <%= article.createdAt %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Post Content-->
    <article class="mb-4">
      <div class="container">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <p><%= article.content %></p>
            <span class="caption text-muted"
              >Last update:<%= article.updatedAt %>
            </span>
          </div>
        </div>
        <!-- make comment -->
        <div class="col-md col-lg col-xl">
          <h2 class="my-3 fs-3 text-center">Make a comment</h2>
          <!-- Divider-->
          <hr class="my-4" />

          <form
            action="/articulo-comment/<%=article.id%>"
            method="POST"
            class="row g-3 mt-3"
          >
            <label for="firstname" class="mt-1">Nombre</label>
            <input
              type="text"
              class="form-control"
              name="firstname"
              placeholder="Ingresa Nombre"
            />

            <label for="content" class="form-label mt-2">Contenido </label>
            <textarea
              class="form-control"
              rows="7"
              name="content"
              placeholder="Escribe tu articulo aquÃ­..."
            ></textarea>
            <div class="text-center">
              <button type="submit" class="btn btn-primary shadow m-4">
                Comentar
              </button>
            </div>
          </form>
        </div>
        <!-- comentarios -->
        <hr class="my-4" />
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7 text-center">
            <h2 class="post-title">Comment section</h2>
            <%comments.forEach(comment => { %>
            <div class="post-preview">
              <p class="caption text-muted">
                Posted by
                <a href="#!"> <%= comment.user %> </a>
                on <%= comment.createdAt %>
              </p>
              <p class="post-meta"><%= comment.content%></p>
              <hr class="my-4" />
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </article>
    <!-- Footer-->
    <%- include ("components/footer") %>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
  </body>
</html>
