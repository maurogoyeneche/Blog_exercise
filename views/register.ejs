<!DOCTYPE html>
<html lang="en">
  <%- include ("components/head") %>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-K5F7TFV"
        height="0"
        width="0"
        style="display: none; visibility: hidden"
      ></iframe
    ></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <!-- Navigation-->
    <%- include ("components/navbar") %>
    <!-- Page Header-->
    <header class="masthead">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>El blog del team six</h1>
              <span class="subheading">Un blog muy cheto</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="container">
      <div class="bg-light border shadow m-2">
        <form action="/registro" method="POST" class="p-5">
          <label class="form-label" for="firstname">Nombre</label>
          <input
            class="w-100 form-control"
            type="text"
            name="firstname"
            id="firstname"
          />
          <label class="form-label" for="lastname">Apellido</label>
          <input
            class="w-100 form-control"
            type="text"
            name="lastname"
            id="lastname"
          /><label class="form-label" for="email">Email</label>
          <input
            class="w-100 form-control"
            type="email"
            name="email"
            id="email"
          />
          <label class="form-label" for="username">Username</label>
          <input
            class="w-100 form-control"
            type="username"
            name="username"
            id="username"
          />
          <label class="form-label" for="password">Contrase√±a</label>
          <input
            class="w-100 form-control"
            type="password"
            name="password"
            id="password"
          />
          <button class="btn btn-success mt-4">Registrarse</button>
        </form>
      </div>
    </div>
    <!-- Footer-->
    <%- include ("components/footer") %>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
  </body>
</html>
